<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_production_lot_tree_inh_catchlot" model="ir.ui.view">
            <field name="name">view.production.lot.tree.inh.catchlot</field>
            <field name="model">stock.production.lot</field>
            <field name="inherit_id" ref="stock.view_production_lot_tree" />
            <field name="arch" type="xml">
                <field name="name" position="before">
                    <field name="customer" />
                </field>
            </field>
        </record>
        <record id="view_production_lot_form_inh_catchlot" model="ir.ui.view">
            <field name="name">view.production.lot.form.inh.catchlot</field>
            <field name="model">stock.production.lot</field>
            <field name="inherit_id" ref="stock.view_production_lot_form" />
            <field name="arch" type="xml">
                <field name="ref" position="before">
                    <field name="customer" domain="[('customer','=',True)]" />
                </field>
            </field>
        </record>
        <record id="search_product_lot_filter_inh_catchlot" model="ir.ui.view">
            <field name="name">search.product.lot.filter.inh.catchlot</field>
            <field name="model">stock.production.lot</field>
            <field name="inherit_id" ref="stock.search_product_lot_filter" />
            <field name="arch" type="xml">
                <field name="name" position="before">
                    <field name="customer" />
                </field>
                <xpath expr="//group/filter[1]" position="before">
                    <filter name="customer" string="Customer"
                            icon="terp-personal" domain="[]"
                            context="{'group_by':'customer'}"/>
                </xpath>
            </field>
        </record>
        <record id="action_lots_from_customer" model="ir.actions.act_window">
            <field name="name">Lots</field>
            <field name="res_model">stock.production.lot</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">
                    {'search_default_customer': active_id,
                    'default_customer': active_id,
                    }
            </field>
            <field name="domain">[('customer', '=', active_id)]</field>
        </record>
    </data>
</openerp>
