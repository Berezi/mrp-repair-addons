<openerp>
    <data>
        <record id="action_expenses" model="ir.actions.act_window">
            <field name="name">Expenses</field>
            <field name="res_model">hr.expense.expense</field>
            <field name="view_id" ref="hr_expense.view_expenses_tree"/>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('repair_id', '=', active_id)]</field>
            <field name="context">{'search_default_repair_id': active_id}</field>
        </record>
        <record id="mrp_repair_expense_form_view" model="ir.ui.view">
            <field name="name">mrp.repair.expense.form</field>
            <field name="model">mrp.repair</field>
            <field name="inherit_id" ref="mrp_repair.view_repair_order_form" />
            <field name="arch" type="xml">
                <h1 position="after">
                    <div class="oe_button_box oe_right" position="inside">
                        <button class="oe_inline oe_stat_button" name="%(mrp_repair_expense.action_expenses)d"
                            icon="fa-gear" type="action">
                            <field string="Expenses" name="expense_count" widget="statinfo"/>
                        </button>
                    </div>
                </h1>
                <notebook position="inside">
                     <page string="Expense lines">
                         <field name="expense_lines" readonly="1"/>
                     </page>
                </notebook>
            </field>
        </record>
    </data>
</openerp>

