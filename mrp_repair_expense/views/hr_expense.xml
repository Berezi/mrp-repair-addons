<openerp>
    <data>
        <record id="hr_expense_repair_form_view" model="ir.ui.view">
            <field name="name">hr.expense.repair.form</field>
            <field name="model">hr.expense.expense</field>
            <field name="inherit_id" ref="hr_expense.view_expenses_form" />
            <field name="arch" type="xml">
                <field name="name" position="after">
                    <field name="repair_order" required="True"/>
                    <field name="repair_analytic_account" invisible="1"/>
                </field>
                <field name="line_ids" position="attributes">
                    <attribute name="context">{'currency_id': currency_id, 'default_repairs': repair_order, 'default_analytic_account': context.get('repair_analytic_account', '')}</attribute>
                </field>
                <xpath expr="//tree[@string='Expense Lines']//field[@name='product_id']" position="after">
                    <field name="repairs"/>
                </xpath>
            </field>
        </record>
    </data>
</openerp>

